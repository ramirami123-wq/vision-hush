{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  bottom_font | font_face: font_display: 'swap' }}
  {{  rating_font | font_face: font_display: 'swap' }}
  {{  title_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  author_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
    overflow: hidden;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .testimonials-heading-{{ section.id }} {
    text-align: {{ heading_align }};
  }

  .testimonials-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
    font-weight: 400;
  }

  .testimonials-heading-{{ section.id }} strong {
    font-weight: 700;
    font-size: {{ heading_size_mobile | plus: 2 }}px;
  }

  .testimonials-rating-{{ section.id }} {
    margin-top: {{ rating_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    align-items: center;
    justify-content: {{ rating_align }};
    gap: 5px;
    flex-wrap: wrap;
  }

  .testimonials-rating-text-{{ section.id }} {
    margin: 0;
    font-size: {{ rating_size_mobile }}px;
    color: {{ rating_color }};
    line-height: {{ rating_height }}%;
  }

  .testimonials-stars-{{ section.id }} {
    display: flex;
    align-items: center;
    gap: 5px;
  }

  .testimonials-stars-{{ section.id }} svg,
  .testimonials-stars-{{ section.id }} img {
    display: block;
    width: {{ stars_size }}px;
    height: {{ stars_size }}px;
    object-fit: cover;
  }

  .testimonials-slider-wrapper-{{ section.id }} {
    margin-top: {{ slider_mt | times: 0.75 | round: 0 }}px;
  }

  .testimonials-slider-{{ section.id }} {
    padding: 8px;
    overflow: visible !important;
  }

  .testimonials-slide-{{ section.id }} {
    display: flex !important;
    flex-direction: column;
    justify-content: space-between;
    padding: {{ card_padding_vertical_mobile }}px {{ card_padding_horizontal_mobile }}px;
    border-radius: {{ card_radius }}px;
    border: {{ card_border_thickness }}px solid {{ card_border_color }};
    background-color: {{ card_bg_color }};
    box-sizing: border-box !important; 
    height: auto !important;
  }

  .testimonials-title-{{ section.id }} {
    margin: 0;
    font-size: {{ title_size_mobile }}px;
    color: {{ title_color }};
    line-height: {{ title_height }}%;
    text-transform: unset;
  }

  .testimonials-text-{{ section.id }} {
    margin: 0;
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-bottom-{{ section.id }} {
    margin-top: {{ author_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    align-items: center;
    gap: 16px;
    flex-wrap: wrap;
    position: relative;
    padding-right: 20px;
  }

  .testimonials-bottom-{{ section.id }}:before {
    content: "‚Äù";
    position: absolute;
    top: 0;
    right: 0px;
    color: black;
    font-size: 50px;
    line-height: 124%;
  }

  .testimonials-avatar-{{ section.id }} {
    width: {{ avatar_size_mobile }}px;
    height: {{ avatar_size_mobile }}px;
    border-radius: 50%;
    background-color: #DDDDDD;
    overflow: hidden;
  }

  .testimonials-avatar-{{ section.id }} img {
    display: block;
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  .testimonials-author-{{ section.id }} {
    margin: 0;
    font-size: {{ author_size_mobile }}px;
    color: {{ author_color }};
    line-height: {{ author_height }}%;
    text-transform: unset;
    font-weight: 700;
  }

  .testimonials-navigation-{{ section.id }} {
    margin-top: {{ navigation_mt | times: 0.75 | round: 0 }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
  }

  .testimonials-btn-prev-{{ section.id }},
  .testimonials-btn-next-{{ section.id }} {
    position: static !important;
    z-index: 2;
    width: {{ arrow_size_mobile }}px;
    height: {{ arrow_size_mobile }}px;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_color }};
    border-radius: 50%;
    background: {{ arrow_bg_color }};
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease 0s;
    cursor: pointer;
    -webkit-appearance: none;
  }

  .testimonials-btn-prev-{{ section.id }} svg,
  .testimonials-btn-next-{{ section.id }} svg {
    height: {{ arrow_icon_size_mobile }}px;
    width: {{ arrow_icon_size_mobile }}px;
  }

  .testimonials-btn-next-{{ section.id }} svg {
    transform: rotate(180deg);
    margin-left: 2px;
  }

  .testimonials-btn-prev-{{ section.id }} svg {
    margin-left: -2px;
  }

  .testimonials-btn-prev-{{ section.id }} svg path,
  .testimonials-btn-next-{{ section.id }} svg path {
    fill: {{ arrow_color }};
    transition: all 0.3s ease 0s;
  }

  .testimonials-btn-prev-{{ section.id }}:hover,
  .testimonials-btn-next-{{ section.id }}:hover {
    transition: all 0.3s ease 0s;
    border: {{ arrow_border_thickness }}px solid {{ arrow_border_hover_color }};
    background: {{ arrow_bg_hover_color }};
  }

  .testimonials-btn-prev-{{ section.id }}:hover svg path,
  .testimonials-btn-next-{{ section.id }}:hover svg path {
    fill: {{ arrow_hover_color }};
    transition: all 0.3s ease 0s;
  }

  .testimonials-btn-prev-{{ section.id }}.swiper-button-disabled,
  .testimonials-btn-next-{{ section.id }}.swiper-button-disabled {
    opacity: 0.3;
  }

  .testimonials-pagination-{{ section.id }} {
    position: static !important;
    min-width: {{ progress_width_mobile }}px;
    max-width: fit-content;
    height: {{ progress_height_mobile }}px !important;
    justify-content: center;
    align-items: center;
    background-color: {{ progress_bg_color }} !important;
    border-radius: 2px;
    z-index:2!important;
  }

  .testimonials-pagination-{{ section.id }} .swiper-pagination-progressbar-fill {
    background-color: {{ progress_color }} !important;
    border-radius: 20px;
  }

  .testimonials-bottom-text-{{ section.id }} {
    text-align: {{ bottom_align }};
    margin-top: {{ bottom_mt | times: 0.75 | round: 0 }}px;
  }

  .testimonials-bottom-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ bottom_size_mobile }}px;
    color: {{ bottom_color }};
    line-height: {{ bottom_height }}%;
    text-transform: unset;
    text-decoration: none;
    user-select: none;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem;
      padding-right: {{ padding_horizontal }}rem;
    }

    .testimonials-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .testimonials-heading-{{ section.id }} strong {
      font-size: {{ heading_size | plus: 2 }}px;
    }

    .testimonials-rating-{{ section.id }} {
      margin-top: {{ rating_mt }}px;
    }

    .testimonials-rating-text-{{ section.id }} {
      font-size: {{ rating_size }}px;
    }

    .testimonials-slider-wrapper-{{ section.id }} {
      margin-top: {{ slider_mt }}px;
    }

    .testimonials-slide-{{ section.id }} {
      padding: {{ card_padding_vertical }}px {{ card_padding_horizontal }}px;
    }

    .testimonials-title-{{ section.id }} {
      font-size: {{ title_size }}px;
    }

    .testimonials-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      font-size: {{ text_size }}px;
    }

    .testimonials-avatar-{{ section.id }} {
      width: {{ avatar_size }}px;
      height: {{ avatar_size }}px;
    }

    .testimonials-author-{{ section.id }} {
      font-size: {{ author_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }},
    .testimonials-btn-next-{{ section.id }} {
      width: {{ arrow_size }}px;
      height: {{ arrow_size }}px;
    }

    .testimonials-btn-prev-{{ section.id }} svg,
    .testimonials-btn-next-{{ section.id }} svg {
      height: {{ arrow_icon_size }}px;
      width: {{ arrow_icon_size }}px;
    }

   .testimonials-pagination-{{ section.id }} {
     min-width: {{ progress_width }}px;
     height: {{ progress_height }}px !important;
   }

    .testimonials-bottom-text-{{ section.id }} {
      margin-top: {{ bottom_mt }}px;
    }
  
    .testimonials-bottom-text-{{ section.id }} * {
      font-size: {{ bottom_size }}px;
    }
    
  }
  
{%- endstyle -%}

