      {% if heading != blank %}
        <div class="testimonials-heading-{{ section.id }}">{{ heading }}</div>
      {% endif %}

      {% unless rating_hide %}
        <div class="testimonials-rating-{{ section.id }}">
          <p class="testimonials-rating-text-{{ section.id }}">{{ rating }} / 5.0</p>
          {% if stars_count != 0 %}
            <div class="testimonials-stars-{{ section.id }}">
              {% if stars_icon != blank %}
                {% for item in (1..stars_count) %}
                  <img src="{{ stars_icon | image_url }}" alt="{{ stars_icon.alt }}" {% if lazy %}loading="lazy"{% endif %}>
                {% endfor %}
              {% else %}
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="19" viewBox="0 0 20 19" fill="none">
                  {% if stars_count > 0 and stars_count < 1  %}
