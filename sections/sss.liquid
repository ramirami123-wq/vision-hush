                  {% endif %}
                  <path {% if stars_count > 2 and stars_count < 3 %}stroke="{{ stars_color }}"{% endif %} d="M10 0L12.9389 5.95492L19.5106 6.90983L14.7553 11.5451L15.8779 18.0902L10 15L4.12215 18.0902L5.24472 11.5451L0.489435 6.90983L7.06107 5.95492L10 0Z" fill="{% if stars_count > 2 and stars_count < 3 %}url(#grad{{ section.id }}3){% elsif stars_count > 2.5 %}{{ stars_color }}{% endif %}"></path>
