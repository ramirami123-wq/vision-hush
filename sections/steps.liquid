{%- style -%}

  {{  heading_font | font_face: font_display: 'swap' }}
  {{  number_font | font_face: font_display: 'swap' }}
  {{  text_font | font_face: font_display: 'swap' }}
  {{  button_font | font_face: font_display: 'swap' }}
  
  .section-{{ section.id }} {
    border-top: solid {{ border_color }} {{ border_thickness }}px;
    border-bottom: solid {{ border_color }} {{ border_thickness }}px;
    margin-top: {{ margin_top | times: 0.75 | round: 0 }}px;
    margin-bottom: {{ margin_bottom | times: 0.75 | round: 0 }}px;
  }
  
  .section-{{ section.id }}-settings {
    margin: 0 auto;
    padding-top: {{ padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ padding_bottom | times: 0.75 | round: 0 }}px;
    padding-left: {{ padding_horizontal_mobile }}rem;
    padding-right: {{ padding_horizontal_mobile }}rem;
  }

  .steps-heading-{{ section.id }} {
    width: 100%;
    text-align: {{ heading_align_mobile }};
  }

  .steps-heading-{{ section.id }} * {
    margin: 0;
    font-size: {{ heading_size_mobile }}px;
    color: {{ heading_color }};
    line-height: {{ heading_height }}%;
    text-transform: unset;
  }

  .steps-body-{{ section.id }} {
    gap: {{ body_gap_mobile }}px;
    margin-top: {{ body_mt_mobile }}px;
  }

  .steps-slider-{{ section.id }} {
    margin-left: -{{ padding_horizontal_mobile }}rem !important;
    margin-right: -{{ padding_horizontal_mobile }}rem !important;
    padding-top: {{ circle_number_size_mobile | times: 0.5 | round: 0 }}px !important;
    margin-top: {{ body_mt_mobile }}px !important;
    padding-left: {{ padding_horizontal_mobile }}rem !important;
    padding-right: {{ padding_horizontal_mobile }}rem !important;
  }

  .steps-image-wrapper-{{ section.id }} {
    position: relative;
  }

  .steps-image-{{ section.id }} {
    border-radius: {{ image_radius }}px;
    overflow: hidden;
    border: {{ image_border_thickness }}px solid {{ image_border_color }};
  }

  .steps-image-{{ section.id }} img,
  .steps-image-{{ section.id }} svg {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .steps-image-{{ section.id }} svg {
    background-color: #AFAFAF;
  }

  .steps-number-{{ section.id }} {
    position: absolute;
    top: -{{ circle_number_size_mobile | times: 0.5 | round: 0 }}px;
    left: 50%;
    transform: translate(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    width: {{ circle_number_size_mobile }}px;
    height: {{ circle_number_size_mobile }}px;
    font-size: {{ number_size_mobile }}px;
    line-height: 100%;
    color: {{ number_color }};
    background-color: {{ circle_number_bg_color }};
    border-radius: 50%;
  }

  .steps-text-{{ section.id }} {
    text-align: {{ text_align_mobile }};
    margin-top: {{ text_mt | times: 0.75 | round: 0 }}px;
  }

  .steps-text-{{ section.id }} * {
    margin: 0;
    font-size: {{ text_size_mobile }}px;
    color: {{ text_color }};
    line-height: {{ text_height }}%;
    text-transform: unset;
  }

  .steps-button-{{ section.id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: {{ button_width_mobile }}px;
    margin: 0;
    margin-top: {{ button_mt_mobile }}px;
    font-size: {{ button_size_mobile }}px;
    color: {{ button_color }};
    line-height: {{ button_height }}%;
    text-align: center;
    text-transform: unset;
    text-decoration: none;
    padding: {{ button_padding_vertical_mobile }}px {{ button_padding_horizontal_mobile }}px;
    border-radius: {{ button_radius }}px;
    transition: all 0.25s ease 0s;
    position: relative;
    font-weight: 700;
    z-index: 2;
  }

  .steps-button-{{ section.id }}:hover {
    color: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-button-{{ section.id }} svg {
    width: 14px;
    height: 14px;
  }

  .steps-button-{{ section.id }} svg path {
    fill: {{ button_color }};
    transition: all 0.25s ease 0s;
  }

  .steps-button-{{ section.id }}:hover svg path {
    fill: {{ button_hover_color }};
    transition: all 0.25s ease 0s;
  }
  
  @media(min-width: 1024px) {

    .section-{{ section.id }} {
      margin-top: {{ margin_top }}px;
      margin-bottom: {{ margin_bottom }}px;
    }
    
    .section-{{ section.id }}-settings {
      padding: 0 5rem;
      padding-top: {{ padding_top }}px;
      padding-bottom: {{ padding_bottom }}px;
      padding-left: {{ padding_horizontal }}rem !important;
      padding-right: {{ padding_horizontal }}rem !important;
    }

    .steps-heading-{{ section.id }} {
      text-align: {{ heading_align }};
    }

    .steps-heading-{{ section.id }} * {
      font-size: {{ heading_size }}px;
    }

    .steps-body-{{ section.id }} {
      display: grid !important;
      gap: {{ body_gap }}px;
      margin-top: {{ body_mt }}px;
      grid-template-columns: repeat({{ section.blocks.size}}, 1fr);
    }

    .steps-slider-{{ section.id }} {
      display: none !important;
    }

    .steps-number-{{ section.id }} {
      top: -{{ circle_number_size | times: 0.5 | round: 0 }}px;
      width: {{ circle_number_size }}px;
      height: {{ circle_number_size }}px;
      font-size: {{ number_size }}px;
    }

    .steps-text-{{ section.id }} {
      margin-top: {{ text_mt }}px;
      text-align: {{ text_align }};
    }
  
    .steps-text-{{ section.id }} * {
      font-size: {{ text_size }}px;
    }

    .steps-button-{{ section.id }} {
      margin-top: {{ button_mt }}px;
      max-width: {{ button_width }}px;
      padding: {{ button_padding_vertical }}px {{ button_padding_horizontal }}px;
      font-size: {{ button_size }}px;
    }
  }
  
