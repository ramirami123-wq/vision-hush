<script>
  function initSteps4() {
    const slider = new Swiper(".steps-slider-{{ section.id }}", {
      speed: 300,
      spaceBetween: 20,
      centeredSlides: true,
      spaceBetween: {{ slider_gap_mobile }},
      slidesPerView: {{ slider_view_mobile }}
    });
  }

  document.addEventListener('DOMContentLoaded', initSteps4);
  
  if (Shopify.designMode) {
     document.addEventListener('shopify:section:unload', initSteps4);
     document.addEventListener('shopify:section:load', initSteps4);
  }
</script>

{% schema %}
  {
    "name": "SS - Steps #4",
    "settings": [
      {
        "type": "header",
        "content": "Heading Settings"
      },
      {
        "type": "richtext",
        "id": "heading",
        "label": "Heading",
        "default": "<h2>How it works</h2>"
      },
      {
        "type": "checkbox",
        "id": "heading_custom",
        "label": "Use Custom Font",
        "default": false
      },
      {
        "type": "font_picker",
        "id": "heading_font",
        "label": "Heading Font Family",
        "default": "josefin_sans_n4"
      },
      {
        "type": "range",
        "id": "heading_size",
        "min": 0,
        "max": 72,
        "step": 2,
        "unit": "px",
        "label": "Heading Size",
        "default": 44
      },
      {
        "type": "range",
        "id": "heading_size_mobile",
        "min": 0,
